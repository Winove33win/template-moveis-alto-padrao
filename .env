# MariaDB connection settings provided by the hosting panel
DB_HOST=your-mariadb-host
DB_PORT=3306
DB_USER=panel_user
DB_PASSWORD=panel_password
DB_NAME=panel_catalog

# Derived connection string used by Prisma
DATABASE_URL="mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}"

# API server configuration
SERVER_PORT=4000

# URL accessed by the Express proxy and Vite dev server to reach the catalog API
# Production deployments must override this with the live Catalog API origin.
CATALOG_API_URL=http://localhost:4000
