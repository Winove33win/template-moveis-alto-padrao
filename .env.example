# Copy this file to .env (never commit it) and replace the placeholder
# values with the secrets generated for your environment.

# Database connection
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_database
DB_SOCKET_PATH=
DB_POOL_LIMIT=10
DB_QUEUE_LIMIT=0
DB_CONNECT_RETRIES=5
DB_CONNECT_RETRY_DELAY_MS=2000
DATABASE_URL="mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}"

# API / server runtime
PORT=4000
SERVER_PORT=4000
CATALOG_API_URL=http://localhost:4000
VITE_API_PROXY_TARGET=
VITE_API_BASE_URL=/api

# Authentication
JWT_SECRET=change-me
ADMIN_JWT_SECRET=
JWT_EXPIRATION=2h
BCRYPT_SALT_ROUNDS=10

# Admin bootstrap (scripts/create-admin.js)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me
